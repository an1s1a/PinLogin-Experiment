            android:layout_margin="20dp"
            android:background="@drawable/selector_textview"
            android:clickable="true"
            android:gravity="center"
            android:onClick="cancAllClick"
            android:text="@string/canc_all"
            android:textColor="@color/selector_color_text"
            android:textSize="30sp"
            android:contentDescription="@string/delete_all"/>

        <TextView
