        <TextView
            android:id="@+id/canc"
            style="@style/NumberText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/selector_textview"
            android:clickable="true"
            android:gravity="top"
            android:onClick="cancClick"
            android:paddingLeft="15dp"
            android:text="@string/canc"
            android:textColor="@color/selector_color_text"
            android:textSize="35sp"
            android:contentDescription="@string/delete_last"/>

        <TextView
            android:id="@+id/ok"
            style="@style/NumberText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:background="@drawable/selector_textview"
            android:clickable="true"
            android:gravity="center"
            android:onClick="okClick"
            android:text="@string/ok"
            android:textColor="@color/selector_color_text"
            android:textSize="24sp"
            android:contentDescription="@string/ok"/>
